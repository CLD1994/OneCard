<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="btn_base.radioButton">
        <!--<item name="android:button">@null</item>-->
        <item name="android:textSize">@dimen/textSize_smaller</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>-->
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="flatButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="fl_theme">@array/candy</item>
        <item name="fl_touchEffect">fl_ripple</item>
    </style>

    <style name="flatButton.WhiteFlatButton">
        <item name="android:background">@null</item>
        <item name="fl_theme">@array/snow</item>
    </style>

</resources>